<h1>Listing decisions</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Vote</th>
    <th>Motion</th>
    <th>Text</th>
    <th>Commitee name</th>
    <th>Commitee date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @decisions.each do |decision| %>
  <tr>
    <td><%= decision.id %></td>
    <td><%= decision.vote_id %></td>
    <td><%= decision.motion_id %></td>
    <td><%= decision.text %></td>
    <td><%= decision.commitee_name %></td>
    <td><%= decision.commitee_date %></td>
    <td><%= link_to 'Show', decision %></td>
    <td><%= link_to 'Edit', edit_decision_path(decision) %></td>
    <td><%= link_to 'Destroy', decision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

