<h1>Listing motions</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Text</th>
    <th>Date</th>
    <th>Register</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @motions.each do |motion| %>
  <tr>
    <td><%= motion.id %></td>
    <td><%= motion.title %></td>
    <td><%= motion.text %></td>
    <td><%= motion.date %></td>
    <td><%= motion.register %></td>
    <td><%= motion.latitude %></td>
    <td><%= motion.longitude %></td>
    <td><%= link_to 'Show', motion %></td>
    <td><%= link_to 'Edit', edit_motion_path(motion) %></td>
    <td><%= link_to 'Destroy', motion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <tr>
  	<td colspan="10">
  		Tags:<br>
  		<% @tags.each do |tag| %>
  			<%= tag.name %>
  		<% end %>
  	</td>
  </tr>
  <tr>
  	<td colspan="10">
  		Zugeordnete Projekte:<br>
  		<ul>
  		
  		<% @projects = Motion.find(motion.id).projects %>	
  			
  		<% @projects.each do |project| %>
  			<li>
  			<%= project.name %>
  			</li>
  		<% end %>
  		</ul>
  	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Motion', new_motion_path %>
